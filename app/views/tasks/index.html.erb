<div class="container">
<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
  <li class="list-group-item">
      <%=  link_to task.title, task_path(task)%>
      <%= form_with model: task do |f| %>
      <%= f.check_box :completed %>
        <%= link_to "Delete",
            task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-primary btn-sm"%>
      <% end %>
  </li>
  <% end %>
</ul>
<br>
<%=link_to "Add a task", new_task_path, :class => "btn btn-primary"%>

</div>
